<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/dev.send"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:text="отправить"
        android:textColor="@color/back_nav_lv"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dev.img"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dev.img"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/dev.et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ваше имя"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dev.et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ваш E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/dev.et_subject"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:hint="Введите текст..."
            android:inputType="textMultiLine" />

    </LinearLayout>
</RelativeLayout>