<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.mpolispager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".retrofit.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoShopsActivity"
            android:label="@string/title_activity_info_shops"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfishaActivity"
            android:label="@string/title_activity_afisha"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewsActivity"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListCompanyActivity"
            android:label="@string/title_activity_list_company"></activity>
    </application>

</manifest>